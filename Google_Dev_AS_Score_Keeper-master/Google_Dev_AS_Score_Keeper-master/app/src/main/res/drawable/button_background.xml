<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/colorButton"
                android:centerX="50%"
                android:endColor="#3d4545"
                android:startColor="#3d4545"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </item>
</layer-list>