<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="#782900" />

    <stroke
        android:width="2dp"
        android:color="#782900" />

    <gradient
        android:angle="90"
        android:centerColor="#782900"
        android:endColor="#decc38"
        android:startColor="#decc38"
        android:type="linear" />

    <corners android:radius="1000dp" />

    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp" />
</shape>